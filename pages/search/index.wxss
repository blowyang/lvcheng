/* index.wxss */
@import "../../templates/goods-item/index.wxss";
@import "../../templates/wxSearch/wxSearch.wxss";

page {
  min-height: 100%;
}

.content {
  min-height: 100%;
}

.search-view {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 100rpx;
  background: red;
  display: flex;
  flex-direction: column;
}

.serarch-content {
  background: white;
  width: 650rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: auto;
  padding-left: 20rpx;
  padding-bottom: auto;
  margin: auto;
  height: 70rpx;
  border-radius: 5px 5px;
}

.search-icon {
  margin-right: 20rpx;
}

.search-input {
  width: 500rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 150rpx;
  height: 70rpx;
  margin-right: 0rpx;
  background-color: blueviolet;
  font-size: 28rpx;
  align-items: center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color: #fff;
  border: none;
  position: relative;
}

.list-bottom {
  height: 100rpx;
}

.no-more-goods {
  margin-top: 150rpx;
  margin-bottom: 50rpx;
  background-color: greenyellow;
}

.load-more-goods {
  text-align: center;
  font-size: 30rpx;
  width: 380rpx;
  height: 60rpx;
}
